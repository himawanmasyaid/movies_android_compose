<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.himawanmasyaid.moviescompose">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".MoviesApplication"
        android:allowBackup="true"
        android:icon="@mipmap/movies_logo"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/movies_logo_foreground"
        android:supportsRtl="true"
        android:theme="@style/Theme.MoviesAndroidCompose">
        <activity
            android:name=".ui.view.MainActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.MoviesAndroidCompose.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>